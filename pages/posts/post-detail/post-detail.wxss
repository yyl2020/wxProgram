

.containter {
 display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.author-date {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.author {
  font-size: 28rpx;
  font-weight: 300;
  color: #666;
  margin-left: 10rpx;
  vertical-align: middle;
}

.const-text {
  font-size: 24rpx;
  color: #666;
  margin-left: 20rpx;
}

.date {
  font-size: 26rpx;
  color: #666;
  margin-left: 30rpx;
  vertical-align: middle;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  margin-left: 40rpx;
  padding-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.circle-img {
  float: right;
  margin-right: 30rpx;
  vertical-align: middle;
}

.circle-img image {
  width: 90rpx;
  height: 90rpx;
}

.share-img {
  margin-left: 30rpx;
}

.horizon {
  width: 660rpx;
  height: 1px;
  margin: 0 auto;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  z-index: -99;
}

.detail {
  display: block;
  color: #666;
  margin-top: 95rpx;
  line-height: 44rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  letter-spacing: 2px;
}